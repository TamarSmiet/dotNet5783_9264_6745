<Window x:Class="PL.windows.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.windows"
        mc:Ignorable="d"
        Title="SimulatorWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Label Content="{Binding ClockText}" Height="50" Width="100" Margin="-300,-300,0,0"/>
        <Label Content="{Binding ExpectedOrderDetails , Mode=TwoWay}" Height="50" Width="100" Margin="-300,-150,0,0"/>
        <Label Content="{Binding CurrentOrderHandle, Mode=TwoWay}" Height="50" Width="100" Margin="-300,0,0,0"/>
        
        <Button Content="stop timer" Height="50" Width="100" Click="StopTimerButton_Click"></Button>
        
    </Grid>
</Window>
