<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightBlue"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Button Content="Manager" Margin="275,26,300,343" FontSize="30"  Click="ShowManagerWindow_Click"/>
        <Button Content="New order" Margin="275,112,300,255" FontSize="30"  Click="ShowNewOrderWindow_Click"/>
        <Button Content="Track order" Margin="275,209,300,161" FontSize="30"  Click="ShowTrackOrderWindow_Click"/>
        <Button Content="Start simulator" Margin="275,302,300,65" FontSize="30"  Click="ShowSimulatorWindow_Click"/>
    </Grid>
</Window>
